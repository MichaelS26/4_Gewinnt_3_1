<UserControl x:Class="VierGewinnt.View.Ansichten.HighscoreControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="300" Width="400">

    <Grid Background="#70000000">
        <Border Background="#DDD" CornerRadius="10" Width="340"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Margin="15">

                <!-- Titel -->
                <TextBlock Text="Highscores"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="Blue"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Highscore-Liste -->
                <ScrollViewer Height="150">
                    <DataGrid x:Name="dgHighscore"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              CanUserAddRows="False">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name"
                                                Binding="{Binding Name}"
                                                Width="*"
                                                CanUserSort="False"/>
                            <DataGridTextColumn Header="Siege"
                                                Binding="{Binding Siege}"
                                                Width="*"
                                                CanUserSort="False"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Alle Einträge löschen"
                            Width="137"
                            Margin="5"
                            Background="#CDA434"
                            Foreground="White"
                            Click="BtnClear_Click"/>

                    <Button Content="Schließen"
                            Width="90"
                            Margin="5"
                            Background="#CDA434"
                            Foreground="White"
                            Click="BtnClose_Click"/>
                </StackPanel>

                <!-- Buttons -->

            </StackPanel>
        </Border>
    </Grid>

</UserControl>
