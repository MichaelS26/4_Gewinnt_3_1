<UserControl x:Class="VierGewinnt.View.Ansichten.OverlayMenueControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="300" Width="400">

    <Grid Background="#60000000">
        <!-- Rahmen mittig, runde Ecken -->
        <Border VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Background="#c19977"
                BorderBrush="#b27955"
                BorderThickness="2"
                CornerRadius="10">
            <!-- Menüstruktur  -->
            <StackPanel Margin="20"
                        HorizontalAlignment="Center">
                <TextBlock Text="4 Gewinnt"
                           Foreground="White"
                           FontSize="24"
                           Margin="0,0,0,15"/>

                <!-- Highscore Liste -->
                <Button Content="Highscores"
                        Width="160"
                        Margin="0,0,0,10"
                        Click="BtnHighscores_Click"/>

                <!-- Spiel starten -->
                <Button Content="Spiel starten"
                        Width="160"
                        Margin="0,0,0,10"
                        Click="BtnSpielStarten_Click"/>

                <!-- Programm beenden -->
                <Button Content="Beenden"
                        Width="160"
                        Click="BtnBeenden_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
